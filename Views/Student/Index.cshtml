@model IEnumerable<APPLICATION_WEB_LAB_INV.Models.student>

@{
    ViewData["Title"] = "Index";
}

<h3>Lista de alumnos</h3>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Agregar Estudiante</a>
</p>
<div class="card bg-dark">
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-dark table-striped table-hover" id="myTable">
            <thead class="thead-dark" style="position: sticky; top: 0; z-index: 1;">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Correo Electrónico</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-controller="student" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Editar</a>
                            <a class="btn btn-success btn-sm" asp-controller="student" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Detalles</a>
                            <a class="btn btn-danger btn-sm" asp-controller="student" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
